rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow team members to access team files
    match /teams/{teamId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        firestore.exists(/databases/(default)/documents/teams/$(teamId)) &&
        firestore.get(/databases/(default)/documents/teams/$(teamId)).data.members.hasAny([request.auth.uid]);
    }
    
    // Allow public read access to public assets
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
